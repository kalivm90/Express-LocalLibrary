extends layout 

block content 
    h1 #{title}: #{genre.name} 
    hr
    if book.length > 0
        p.text-warning(style="margin: 40px 0;") You cannot remove a genre if a book is still currently classified with it 
        h4 Books
        dl
            each b in book  
                dt 
                    a(href=b.url+"/delete") #{b.title}
                    p #{b.summary}

    else 
        p Are you sure you want to delete this Genre? 
        
        form(method="POST", action="") 
            div.form-group 
                input(type="hidden", name="genreid" required="true" value=genre.id)
                button.btn.btn-primary(type="submit") Delete




